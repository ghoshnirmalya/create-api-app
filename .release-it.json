{
  "git": {
    "requireCleanWorkingDir": false,
    "commitMessage": "chore: releases version ${version}"
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true,
    "skipChecks": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "changelog.md"
    }
  },
  "hooks": {
    "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
  }
}
